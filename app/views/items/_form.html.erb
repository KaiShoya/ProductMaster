    <tr class="field">
      <td><%= f.label :user_id %></td>
      <td><%= f.number_field :user_id %></td>
    </tr>
    <tr class="field">
      <td><%= f.label :code %></td>
      <td><%= f.number_field :code %></td>
    </tr>
    <tr class="field">
      <td><%= f.label :revision %></td>
      <td><%= f.number_field :revision %></td>
    </tr>
    <tr class="field">
      <td><%= f.label :maker %></td>
      <td><%= f.text_field :maker %></td>
    </tr>
    <tr class="field">
      <td><%= f.label :name %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr class="field">
      <td><%= f.label :size %></td>
      <td><%= f.text_field :size %></td>
    </tr>
    <tr class="field">
      <td><%= f.label :price %></td>
      <td><%= f.number_field :price %></td>
    </tr>
    <tr class="field">
      <td><%= f.label :picture %></td>
      <td><%= f.file_field :file,accept: “image/jpeg” %></td>
    </tr>
  </table>
  
  <div class="actions">
    <%= f.submit nil,class: "btn btn-primary" %>
  </div>
  
